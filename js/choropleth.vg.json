{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Economical Stress Level in Malaysia for 2022",
  "width": "container",
  "height": 400,
  "projection": { "type": "equalEarth" },
  "data": {
    "url": "https://raw.githubusercontent.com/weichunnn/covid-analysis/master/js/malaysia-states.topojson",
    "format": {
      "type": "topojson",
      "feature": "my-states"
    }
  },

  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/weichunnn/covid-analysis/master/data/epidemic/economy_stress.csv"
            },
            "key": "state",
            "fields": ["economical_stress_level"]
          }
        }
      ],
      "mark": { "type": "geoshape", "stroke": "black" },
      "encoding": {
        "color": {
          "field": "economical_stress_level",
          "type": "ordinal",
          "scale": {
            "type": "ordinal",
            "domain": ["Very High", "High", "Medium", "Low", "Very Low"],
            "range": ["#bd0026", "#f03b20", "#fd8d3c", "#f2b818", "#ede923"]
          },
          "legend": {
            "title": "Economy Stress Level Indicator",
            "titleLimit": 225,
            "orient": "none",
            "legendX": 50,
            "legendY": 425,
            "direction": "horizontal",
            "symbolType": "square",
            "labelFontSize": 12,
            "titleFontSize": 13,
            "symbolSize": 135
          }
        },
        "opacity": {
          "condition": { "param": "state_highlight", "value": 1 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "id", "type": "nominal", "title": "State" },
          {
            "field": "economical_stress_level",
            "type": "ordinal",
            "title": "Stress Level"
          }
        ]
      },
      "params": [
        {
          "name": "state_highlight",
          "select": { "type": "point", "fields": ["economical_stress_level"] },
          "bind": "legend"
        }
      ]
    }
  ],
  "config": { "view": { "stroke": null }, "font": "Nunito" }
}
