{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/weichunnn/covid-analysis/master/data/epidemic/cases_malaysia.csv"
  },
  "config": { "font": "Nunito" },
  "transform": [
    { "calculate": "timeParse(datum['date'], '%Y-%m-%d')", "as": "date" },
    { "filter": { "timeUnit": "year", "field": "date", "equal": 2022 } },
    {
      "window": [{ "field": "cases_new", "op": "mean", "as": "rolling_mean" }],
      "frame": [-15, 15]
    }
  ],
  "vconcat": [
    {
      "width": 880,
      "height": 400,
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "scale": { "domain": { "param": "brush" } },
          "axis": { "title": "", "grid": false }
        },
        "y": {
          "field": "cases_new",
          "type": "quantitative",
          "axis": { "title": "Daily Covid-19 Cases" },
          "scale": { "domain": [0, 40000] }
        }
      },
      "layer": [
        {
          "mark": { "type": "bar", "size": 2, "color": "#3B82F6" },
          "encoding": {
            "color": {
              "field": "placeholder",
              "scale": { "range": ["#3B82F6"] },
              "legend": {
                "title": "Legend",
                "labelExpr": "'Daily Cases'",
                "orient": "none",
                "legendX": 710,
                "legendY": 15,
                "labelFontSize": 12,
                "titleFontSize": 13,
                "symbolSize": 135
              }
            }
          }
        },
        {
          "mark": { "type": "line", "color": "#101826", "size": 3 },
          "encoding": {
            "y": { "field": "rolling_mean", "type": "quantitative" },
            "stroke": {
              "field": "placeholder-2",
              "scale": { "range": ["#101826"] },
              "legend": {
                "orient": "none",
                "legendX": 710,
                "legendY": 55,
                "title": "",
                "labelExpr": "'30 Days Rolling Average'",
                "labelFontSize": 12,
                "titleFontSize": 13,
                "symbolSize": 135
              }
            }
          }
        },
        {
          "data": {
            "values": [
              { "x": "2022-04-01", "y": 25000, "labels": "Endemic declared" },
              {
                "x": "2022-02-16",
                "y": 35000,
                "labels": "Omicron varient hits"
              },
              {
                "x": "2022-08-01",
                "y": 7500,
                "labels": "Travel restrictions relaxed"
              }
            ]
          },
          "layer": [
            {
              "encoding": {
                "x": { "type": "temporal", "field": "x" },
                "y": {}
              },
              "mark": { "type": "rule", "size": 2, "color": "gray" }
            },
            {
              "encoding": {
                "x": { "type": "temporal", "field": "x" },
                "y": { "type": "quantitative", "field": "y" },
                "text": { "type": "nominal", "field": "labels" }
              },
              "mark": {
                "type": "text",
                "align": "left",
                "dx": 10,
                "baseline": "bottom",
                "fontSize": 14
              }
            }
          ]
        },
        {
          "mark": {
            "type": "rule",
            "size": 2,
            "color": "#5d636d",
            "strokeDash": [10, 10]
          },
          "encoding": {
            "y": {},
            "opacity": {
              "condition": { "value": 1, "param": "hover", "empty": false },
              "value": 0
            },
            "tooltip": [
              { "field": "date", "type": "temporal", "title": "Date" },
              {
                "field": "cases_new",
                "type": "quantitative",
                "title": "Number of Cases"
              },
              {
                "field": "rolling_mean",
                "type": "quantitative",
                "title": "30 Days Rolling Average",
                "format": ".0f"
              }
            ]
          },
          "params": [
            {
              "name": "hover",
              "select": {
                "type": "point",
                "fields": ["date"],
                "nearest": true,
                "on": "mouseover",
                "clear": "mouseout"
              }
            }
          ]
        },
        {
          "transform": [{ "filter": { "param": "hover", "empty": false } }],
          "mark": "point",
          "encoding": {
            "y": { "field": "rolling_mean", "type": "quantitative" }
          }
        },
        {
          "transform": [{ "filter": { "param": "hover", "empty": false } }],
          "mark": "point",
          "encoding": { "y": { "field": "cases_new", "type": "quantitative" } }
        }
      ]
    },
    {
      "width": 880,
      "height": 100,
      "layer": [
        {
          "mark": { "type": "bar", "size": 2, "color": "#bfd8ff" },
          "params": [
            {
              "name": "brush",
              "select": { "type": "interval", "encodings": ["x"] }
            }
          ],
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "axis": { "grid": false, "title": "Date" }
            },
            "y": {
              "field": "cases_new",
              "type": "quantitative",
              "axis": {
                "tickCount": 3,
                "grid": false,
                "title": "Daily Covid-19 Cases"
              }
            }
          }
        },
        {
          "mark": { "type": "line", "color": "#101826", "size": 3 },
          "encoding": {
            "x": { "field": "date", "type": "temporal" },
            "y": { "field": "rolling_mean", "type": "quantitative" }
          }
        }
      ]
    }
  ]
}
